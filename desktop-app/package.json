{
  "name": "bonsai-sat-prep",
  "version": "1.0.0",
  "description": "AI-powered SAT preparation with your personal Bonsai tutor - Glass-inspired desktop application",
  "main": "main.js",
  "homepage": "https://bonsai-sat.com",
  "author": {
    "name": "Bonsai SAT Team",
    "email": "team@bonsai-sat.com",
    "url": "https://bonsai-sat.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "cd .. && npm run build",
    "build:electron": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "publish": "npm run build && electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "SAT",
    "education",
    "AI",
    "tutoring",
    "test-prep",
    "bonsai",
    "glass",
    "electron",
    "desktop"
  ],
  "build": {
    "appId": "com.bonsai-sat.prep",
    "productName": "Bonsai SAT Prep",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "node_modules/**/*",
      "../dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../dist",
        "to": "app",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Education",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bonsai SAT Prep"
    },
    "dmg": {
      "title": "Bonsai SAT Prep",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "bonsai-sat",
      "repo": "bonsai-sat-prep"
    },
    "afterSign": "scripts/notarize.js"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "electron-updater": "^6.1.0",
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.0",
    "electron-reload": "^2.0.0",
    "electron-notarize": "^1.2.0",
    "rimraf": "^5.0.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-node": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bonsai-sat/bonsai-sat-prep.git"
  },
  "bugs": {
    "url": "https://github.com/bonsai-sat/bonsai-sat-prep/issues"
  }
}